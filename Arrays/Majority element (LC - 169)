int majorityElement(vector<int>& nums) 
    {
        sort(nums.begin(), nums.end());
        
        int n = nums.size();
        int ans = 1, i = 0;
        for(i = 0; i < n - 1; i++)
        {
            if(nums[i] == nums[i + 1])
            {
                ans++;
                if(ans > n / 2)   
                    break;
            }    
            else
                ans = 1;
        }    

        return nums[i];
    }
