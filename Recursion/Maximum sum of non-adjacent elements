void solve(vector<int> &arr, int sum, int &maxi, int i)
{
  if(i >= arr.size())
  {
    maxi = max(sum, maxi); 
    return;
  }
  
  solve(arr, sum + arr[i], maxi, i + 2);
  solve(arr, sum, maxi, i + 1);
  return;
}

int main()
{
  vector<int> arr{2,1,4,9};
  int sum = 0;
  int maxi = INT_MIN;
  int i = 0;
  solve(arr, sum, maxi, i);
  cout << maxi;
}
